  "main": "src/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "db:init": "node scripts/init-db.js",
    "db:test": "node scripts/test-db.js",
    "user:set": "node scripts/set-password.js",
    "user:update": "node scripts/update-passwords.js",
    "login:test": "node scripts/test-login.js"
